#!/usr/bin/env bash
VERSION="0.1.1"
PROJECT_NAME=$1
TARGET_FILE="CMakeLists.txt"
if [ "$#" -ge 2 ] && [ "$2" = "-f" ];
    then echo -n "" > $TARGET_FILE
fi
echo "Writing to ${TARGET_FILE}"

cat >>$TARGET_FILE <<- EOF
##############################################
# GENERATED BY makelists ${VERSION} (${USER})
# $(date)
# USING by ${0##*/} ${@}
##############################################

cmake_minimum_required(VERSION 3.6)
project($PROJECT_NAME)

#set(PROJECT_ROOT
#        "./"
#        "./path/to"
#    )

#set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=c++11")

#set(SEARCH_PATHS
#       ../search_path/1
#       ../search_path/2
#    )

include(~/._local/var/cmake_include)


EOF
